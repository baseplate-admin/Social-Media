[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]
## Django
django = {extras = ["argon2"], version = "*"}
# First party
channels = "*"
channels-redis={version='*', markers="platform_system != 'Windows'"}
# Daphne
twisted = {extras = ["http2", "tls"], version = "*"}
## Async http client
httpx = {extras = ["brotli", "http2"], version = "*"}
## Image resizer
pillow = "*"
pillow-avif-plugin = "*"

[dev-packages]
black = "*"
django-debug-toolbar = '*'

[requires]
python_version = "3.10"

[pipenv]
allow_prereleases = true

[scripts]
dev = "python ./manage.py runserver"
prod = 'daphne -b 0.0.0.0 -p 8000 core.asgi:application'
sync = 'python ./manage.py migrate'
